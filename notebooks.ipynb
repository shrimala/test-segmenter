    "def convert_to_nbits(array, bits=8):\n",
    "    scaling_factor = 2**bits\n",
    "    array = (array*scaling_factor).astype(\"int\")\n",
    "    array = np.round(array)\n",
    "    array = array/scaling_factor\n",
    "    return array"
